# Load required libraries
library(ggplot2)

# Load and display the mtcars dataset
data(mtcars)
print(mtcars)

# Q-Q plot for mpg
ggplot(data = mtcars, aes(sample = mpg)) +
  stat_qq() +
  stat_qq_line() +
  labs(title = "Q-Q plot for MPG", x = "Theoretical Quantiles", y = "MPG (sample)") +
  theme_minimal()

# Q-Q plot for hp
ggplot(data = mtcars, aes(sample = hp)) +
  stat_qq() +
  stat_qq_line() +
  labs(title = "Q-Q plot for HP", x = "Theoretical Quantiles", y = "HP (sample)") +
  theme_minimal()

# Pearson correlation test between mpg and hp
cor.test(mtcars$mpg, mtcars$hp, method = "pearson")
