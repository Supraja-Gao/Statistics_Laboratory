# Step 1: Install necessary packages (only once per session)
install.packages("ggplot2")
install.packages("dplyr")
install.packages("tidyr")

# Step 2: Load libraries
library(ggplot2)
library(dplyr)
library(tidyr)

# Step 3: Load dataset
df <- read.csv("pricequotes.csv")

# Step 4: Rename columns (replace dots with underscores)
colnames(df) <- gsub("\\.", "_", colnames(df))

# Step 5: View summary
print(summary(df))

# Step 6: Convert data from wide to long format
df_long <- df %>%
  pivot_longer(cols = c(Barry_Price, Mary_Price),
               names_to = "Person",
               values_to = "Price")

# Step 7: Create the boxplot
ggplot(df_long, aes(x = Person, y = Price, fill = Person)) +
  geom_boxplot() +
  labs(title = "Boxplot of Price Quotes", x = "Person", y = "Price") +
  theme_minimal()
